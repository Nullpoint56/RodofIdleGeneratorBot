# === Bot Configuration ===
BOT__TOKEN=your-bot-token-here
BOT__COMMAND_PREFIX=!

# === Sentry Configuration ===
SENTRY__ENABLE=false                      # Set to true to enable error reporting
SENTRY__DSN=https://your-sentry-dsn-url  # Your full DSN from Sentry project settings
SENTRY__SEND_PII=false                    # Whether to include user-related data
SENTRY__TRACES_SAMPLE_RATE=0.2           # Performance monitoring (0.0 to 1.0)
SENTRY__PROFILING_SAMPLE_RATE=0.2        # Profiling sampling rate (0.0 to 1.0)

# === Optional Paths (override if needed) ===
PATHS__DATA_DIR=./data
PATHS__LOGS_DIR=./logs
PATHS__QUOTES_FILE=./data/quotes.json
PATHS__QUOTES_INDEX_FILE=./data/quotes.index.json  # or another location if needed

# === AI Model Configuration ===
AI__EMBEDDING_MODEL=your-embedding-model-name
